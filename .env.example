# Configuration du Frontend Vue.js
VITE_DIRECTUS_URL=http://localhost:8055

# Configuration du serveur Directus
PORT=8055
PUBLIC_URL=http://localhost:8055/

# Base de données SQLite
DB_CLIENT=sqlite3
DB_FILENAME=./directus/data.db

# Clés de sécurité Directus (à changer en production)
KEY=12345678901234567890123456789012
SECRET=abcdef1234567890abcdef1234567890

# Compte administrateur par défaut
ADMIN_EMAIL=admin@mcrh.com
ADMIN_PASSWORD=123456

# Configuration CORS
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000,http://localhost:5180

# Configuration des fichiers
STORAGE_LOCATIONS=local
STORAGE_LOCAL_ROOT=./uploads

# Logs
LOG_LEVEL=info

# Email (optionnel - pour les notifications)
# EMAIL_FROM=noreply@mcrh.com
# EMAIL_TRANSPORT=smtp
# EMAIL_SMTP_HOST=localhost
# EMAIL_SMTP_PORT=587
